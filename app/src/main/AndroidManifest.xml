<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agarwal.arpit.androidhub">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".CustomApplicationClass">

        <!-- TODO :: study launch modes -->
        <activity
            android:name=".SplashScreen"
            android:launchMode="standard" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeScreenActivity" />

        <activity android:name=".lifecycle.ActivityA" android:launchMode="singleTask"/>
        <activity android:name=".lifecycle.ActivityB" android:launchMode="singleInstance"/>
        <activity android:name=".lifecycle.ActivityC" android:launchMode="singleTop"/>

    </application>

</manifest>